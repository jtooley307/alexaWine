{
  "type": "APL",
  "version": "1.8",
  "theme": "dark",
  "styles": {
    "title": { "values": [{ "color": "${theme.colors.on_primary}", "fontSize": 40, "fontWeight": "700" }] },
    "subtitle": { "values": [{ "color": "${theme.colors.surface}", "fontSize": 22 }] }
  },
  "mainTemplate": {
    "parameters": ["theme"],
    "items": [
      {
        "type": "Container",
        "backgroundColor": "${theme.colors.bg_primary}",
        "width": "100%",
        "height": "100%",
        "items": [
          { "type": "Text", "style": "title", "text": "Wine Assistant", "paddingTop": 48, "paddingLeft": 24 },
          { "type": "Text", "style": "subtitle", "text": "Try: 'find spicy red from Portugal'", "paddingLeft": 24 }
        ]
      }
    ]
  }
}
