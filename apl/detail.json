{
  "type": "APL",
  "version": "1.8",
  "theme": "dark",
  "styles": {
    "title": { "values": [{ "color": "${theme.colors.on_primary}", "fontSize": 36, "fontWeight": "700" }] },
    "subtitle": { "values": [{ "color": "${theme.colors.surface}", "fontSize": 22 }] },
    "body": { "values": [{ "color": "${theme.colors.surface}", "fontSize": 20 }] },
    "sectionHeader": { "values": [{ "color": "${theme.colors.accent}", "fontSize": 22, "fontWeight": "700" }] },
    "chip": { "values": [{ "backgroundColor": "${theme.colors.accent}", "color": "#000", "borderRadius": 12, "padding": 10, "fontWeight": "700" }] }
  },
  "mainTemplate": {
    "parameters": ["theme", "detail"],
    "items": [
      {
        "type": "Container",
        "width": "100%",
        "height": "100%",
        "backgroundColor": "${theme.colors.bg_primary}",
        "items": [
          {
            "type": "Image",
            "source": "${detail.imageUrl}",
            "width": "100%",
            "height": 160,
            "scale": "best-fit",
            "overlayGradient": {
              "type": "linear",
              "colorRange": ["#00000000", "#000000AA"],
              "angle": 180
            }
          },
          { "type": "Text", "style": "title", "text": "${detail.name}", "padding": 24 },
          { "type": "Text", "style": "subtitle", "text": "${detail.winery}", "paddingLeft": 24, "paddingRight": 24 },
          {
            "type": "Container",
            "direction": "row",
            "padding": 24,
            "items": [
              { "type": "Text", "style": "body", "text": "${detail.vintage ? 'Vintage: ' + detail.vintage : ''}", "grow": 1 },
              { "type": "Text", "style": "body", "text": "${detail.rating ? 'Rating: ' + detail.rating : ''}", "grow": 1 },
              { "type": "Text", "style": "body", "text": "${detail.price ? 'Price: $' + detail.price : ''}", "grow": 1 }
            ]
          },
          { "type": "Text", "style": "body", "text": "${detail.description}", "paddingLeft": 24, "paddingRight": 24, "maxLines": 6 },
          { "type": "Text", "style": "sectionHeader", "text": "Winemakerâ€™s Tasting Notes", "paddingLeft": 24, "paddingRight": 24, "paddingTop": 8 },
          { "type": "Text", "style": "body", "text": "${detail.tastingNotes}", "paddingLeft": 24, "paddingRight": 24, "maxLines": 8 },
          {
            "type": "Container",
            "direction": "row",
            "spacing": 16,
            "padding": 24,
            "items": [
              { "type": "Text", "style": "chip", "text": "Price" },
              { "type": "Text", "style": "chip", "text": "Rating" },
              { "type": "Text", "style": "chip", "text": "Description" },
              { "type": "Text", "style": "chip", "text": "Location" }
            ]
          }
        ]
      }
    ]
  }
}
