# Wine.com API Configuration
WINE_API_KEY=your_wine_api_key_here
WINE_API_BASE_URL=https://services.wine.com/api/beta2/service.svc/JSON

# Alexa Skill Configuration
ALEXA_SKILL_ID=amzn1.ask.skill.db86c0db-cfb9-426f-99c5-dfc8406bd56f

# AWS Configuration
AWS_REGION=us-east-1
LOG_LEVEL=info

# OpenSearch (Vector DB)
OPENSEARCH_ENDPOINT=
OPENSEARCH_REGION=${AWS_REGION}
OPENSEARCH_INDEX=xwines
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=
OPENSEARCH_USE_IAM=true

# Vector embeddings (batch via local Ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
EMBED_DIM=768

# Bedrock (query-time embeddings - Option A)
BEDROCK_REGION=${AWS_REGION}
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# APL and card visuals
USE_APL=true
# Optional CDN base for wine images used in cards/APL; leave blank to use image_url from data
IMAGE_CDN_BASE=
# Optional base URL for deep links in app cards/APL (e.g., https://yourdomain.example/wine)
DEEP_LINK_BASE=
